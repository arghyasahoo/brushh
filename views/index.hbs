    <script>
      const copyButtons = document.querySelectorAll('.copy-colors');
      copyButtons.forEach(button => {
        button.addEventListener('click', function() {
          alert('Colors copied!');
        });
      });
      
      const preview = document.querySelector('.preview');
      const colorPickers = document.querySelectorAll('.color-picker input');
      colorPickers.forEach(picker => {
        picker.addEventListener('change', function() {
          preview.style.backgroundColor = this.value;
        });
      });

      function toggleMenu() {
        document.getElementById('circularMenu').classList.toggle('active');

        if (document.getElementById('menu-icon').classList.contains('fa-bars')) { 
          document.getElementById('menu-icon').classList.replace('fa-bars', 'fa-xmark');
        } else {
          document.getElementById('menu-icon').classList.replace('fa-xmark', 'fa-bars');
        }
      }
    </script>
